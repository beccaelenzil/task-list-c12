<h1>Tasks</h1>
<h2><%= link_to "Create A New Task", new_task_path %>
<ul>
  <% @tasks.each do |task|  %>
    <li>
      <%= link_to task[:name], task_path(task), class: "name"  %> 
      <br>
      <%= link_to "edit", edit_task_path(task), class: "name"%>
      <%= link_to "delete", task_path(task), method: :delete, class: "name" %>
    </li>
    <br>
  <% end %>
</ul> 