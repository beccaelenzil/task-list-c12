<%# in app/views/tasks/new.html.erb%>

<%= form_with model: @task, class: 'create-task' do |f|%>
  <p>Please provide the following information to save your task to our database:</p>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :due_date %>
  <%= f.text_field :due_date %>

  <%= f.submit "Save Task", class: "task-button" %>
<% end %>